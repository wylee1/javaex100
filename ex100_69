package java_ex100;

import java.util.Scanner;

public class Java69 {
    public static void main(String args[]){
        Scanner scan = new Scanner(System.in);
        int a,d,n;
        a = scan.nextInt();
        d = scan.nextInt();
        n = scan.nextInt();
        System.out.println(a+d*(n-1));
    }
}
